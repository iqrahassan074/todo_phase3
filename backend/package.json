{
  "name": "textbook-chatbot",
  "version": "1.0.0",
  "description": "A production-ready, AI-native Todo chatbot using MCP and OpenAI Agents with stateless backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
