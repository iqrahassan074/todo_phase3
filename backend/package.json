  "author": "Spec-Driven Development",
  "license": "MIT",
  "dependencies": {
    "@hono/zod-validator": "^0.1.11",
    "better-auth": "^0.2.1",
    "hono": "^4.0.0",
    "openai": "^4.24.7",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
